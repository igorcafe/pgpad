{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "pgpad",
  "version": "2.0.0",
  "identifier": "com.pgpad.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "pgpad",
        "width": 1000,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
